<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    
    <TextView
        android:id="@+id/dodavanje_knjige_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodavanje knjige"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
<ScrollView
    android:id="@+id/scroll_view"
    android:layout_below="@+id/dodavanje_knjige_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/gornji_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/naslov_knjige_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naslov knjige"
            android:textSize="20dp"
            android:padding="5dp" />

        <EditText
            android:id="@+id/autor_id_imeprezime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ime  i prezime autora"
            android:textSize="20dp"
            android:padding="5dp" />

        <EditText
            android:id="@+id/naklada_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naklada"
            android:textSize="20dp"
            android:padding="5dp" />

        <EditText
            android:id="@+id/godina_izdanja_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Godina izdanja"
            android:inputType="number"
            android:maxEms="4"
            android:textSize="20dp"
            android:padding="5dp" />

        <EditText
            android:id="@+id/broj_stranica_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Broj stranica"
            android:inputType="number"
            android:textSize="20dp"
            android:padding="5dp" />

        <Spinner
            android:id="@+id/klasifikacijski_broj_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="5dp" />
    </LinearLayout>

</ScrollView>
    <LinearLayout
        android:layout_below="@+id/scroll_view"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/drugi_dole"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/nazad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Izlaz"
            android:textSize="20dp"
            android:layout_weight="3"
            android:padding="5dp"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/spremi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj"
            android:textSize="20dp"
            android:padding="5dp" />
    </LinearLayout>






</RelativeLayout>